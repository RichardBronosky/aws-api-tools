{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "object-curly-spacing": ["error", "always"],
    "template-curly-spacing": ["error", "always"],
    "react/jsx-curly-spacing": [2, {"when": "always", "allowMultiline": false, "children": true}]
  }
}
